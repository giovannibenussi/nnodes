<div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Autos</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Marca</th>
          <th>Modelo</th>
          <th>Latitud</th>
          <th>Longitud</th>
          <th>Nº de Piezas</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @autos.each do |auto| %>
          <tr>
            <td><%= auto.marca %></td>
            <td><%= auto.modelo %></td>
            <td><%= auto.latitud %></td>
            <td><%= auto.longitud %></td>
            <td><%= auto.piezas.count %></td>
            <td><%= link_to 'Ver', auto %></td>
            <td><%= link_to 'Editar', edit_auto_path(auto) %></td>
            <td><%= link_to 'Eliminar', auto, method: :delete, data: { confirm: 'Está seguro que desea eliminar este auto?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Añadir Auto', new_auto_path %>

</div>
